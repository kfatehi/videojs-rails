<!-- Begin VideoJS -->
<video id="<%= @options[:id] unless @options.nil? %>"
       class="video-js vjs-default-skin <%= @options[:classes] %>"
       poster="<%= @options[:poster] unless @options.nil? %>"
       controls
       width="<%= @options[:width] unless @options.nil? %>"
       height="<%= @options[:height] unless @options.nil? %>"
       preload="auto"
       data-setup="{}">
       <source src="<%= root_url.sub(/(\/)+$/,'') + @sources[:mp4] %>"  type='video/mp4' />
       <source src="<%= root_url.sub(/(\/)+$/,'') + @sources[:webm] %>" type='video/webm; codecs="vp8, vorbis"' />
       <source src="<%= root_url.sub(/(\/)+$/,'') + @sources[:ogv] %>"  type='video/ogg; codecs="theora, vorbis"' />
</video>
<!-- End VideoJS -->
